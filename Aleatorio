import java.util.Scanner;

public class Aleatorio 
{
    public static void main(String[] args) 
    {
        Scanner entrada = new Scanner(System.in);
        
        float aleatorio,redondeado;
        int veces;
        
        System.out.println("Programa para generar nÃºmeros aleatorios:\n");
        System.out.print("Â¿CuÃ¡ntos nÃºmeros aleatorios quieres?: ");
        veces = entrada.nextInt();
        
        for(int i=0;i<veces;i++)
        {
            aleatorio = (float) (Math.random()*10);
            redondeado = Math.round(aleatorio);
            System.out.println("NÃºmero aleatorio " + (i+1) + ":\nðŸ‘‰ " + aleatorio + " \nRedondeado ðŸ‘‰ " + redondeado + "\n");
        }
    }
}

